---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/logo.svg" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content="The final currency" />
        <meta name="keywords" content="thomas coin" />
        <meta name="author" content="principle105" />
        <meta name="theme-color" content="#ffc800" />

        <meta property="og:image" content="/logo.png" />
        <meta property="og:title" content="Thomas Coin" />
        <meta property="og:description" content="The final currency" />
        <title>{title}</title>
    </head>
    <body class="bg-zinc-900">
        <slot />
    </body>
</html>
